{
    "AWSEBDockerrunVersion":2,
    "containerDefinitions":[
        {
            "name": "client",
            "image": "sagardokhale29/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "sagardokhale29/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "sagardokhale29/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "sagardokhale29/multi-nginx",
            "essential": true,
            "portMappings": [
                {
                "hostPort": 80,
                "containerPort": 80
                }
            ],
            "links": ["client","server"]

        }

    ]
}